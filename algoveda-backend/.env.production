# Production Environment Variables for Render Deployment

# Database Configuration
DB_HOST=${DATABASE_URL}  # Render will provide this
DB_PORT=5432
DB_NAME=algoveda
DB_USER=algoveda_user
DB_PASSWORD=secure_password_here

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_key_here_change_before_deploy
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5001
NODE_ENV=production

# Code Execution Service
CODE_EXECUTION_PORT=6000

# Firebase Configuration (if using)
FIREBASE_PRIVATE_KEY_ID=${FIREBASE_PRIVATE_KEY_ID}
FIREBASE_PRIVATE_KEY=${FIREBASE_PRIVATE_KEY}
FIREBASE_CLIENT_EMAIL=${FIREBASE_CLIENT_EMAIL}
FIREBASE_CLIENT_ID=${FIREBASE_CLIENT_ID}
FIREBASE_CLIENT_CERT_URL=${FIREBASE_CLIENT_CERT_URL}